<script>
// SUBMISSIONS GO DIRECTLY TO YOUR BUSINESS EMAIL
const EMAIL_TO = "business@TopDividendETFs.com";

document.getElementById('submitForm').addEventListener('submit', function(e) {
    e.preventDefault();

    const data = {
        toolName: document.getElementById('toolName').value.trim(),
        website: document.getElementById('website').value.trim(),
        category: document.getElementById('category').value,
        pricing: document.getElementById('pricing').value,
        bestFor: document.getElementById('bestFor').value.trim(),
        keyFeature: document.getElementById('keyFeature').value.trim(),
        yourName: document.getElementById('yourName').value.trim(),
        yourEmail: document.getElementById('yourEmail').value.trim()
    };

    const subject = encodeURIComponent(`New Tool Submission: ${data.toolName}`);
    const body = encodeURIComponent(`
New tool submitted to TopDividendTools.com

Tool Name: ${data.toolName}
Website: ${data.website}
Category: ${data.category}
Pricing: ${data.pricing}
Best For: ${data.bestFor}
Key Feature: ${data.keyFeature || "—"}

Submitted by:
Name: ${data.yourName || "Anonymous"}
Email: ${data.yourEmail || "Not provided"}

— Submitted via https://topdividendtools.com/submit-tool.html
    `.trim());

    // Open user's email client with pre-filled message
    window.location.href = `mailto:${EMAIL_TO}?subject=${subject}&body=${body}`;

    // Show success message
    document.getElementById('successMsg').style.display = 'block';
    document.getElementById('errorMsg').style.display = 'none';
    this.reset();
    
    setTimeout(() => {
        document.getElementById('successMsg').style.display = 'none';
    }, 6000);
});
</script>
